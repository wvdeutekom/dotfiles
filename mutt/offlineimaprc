oauth2_client_secret = xxxx
oauth2_refresh_token = xxxx
nametrans = lambda folder: {'INBOX':             'inbox',
                            '[Imap]/Drafts':     'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
